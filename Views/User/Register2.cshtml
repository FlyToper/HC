    <!--------------------------------------------------头部导航结束------------------------------------------------------------->
    <div class="container" style="overflow: hidden;margin-top:30px;">

        <fieldset >
            <legend>注册信息</legend>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">用&nbsp;&nbsp;户&nbsp;&nbsp;名：</span>
                
                <input type="text" class="form-control" placeholder="用户名" aria-describedby="basic-addon1" id="txtNickName">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱：</span>
                <input type="text" class="form-control" placeholder="邮箱" aria-describedby="basic-addon1">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">联系电话：</span>
                <input type="text" class="form-control" placeholder="联系电话" aria-describedby="basic-addon1">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">真实姓名：</span>
                <input type="text" class="form-control" placeholder="真实姓名" aria-describedby="basic-addon1">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">性&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;别：</span>
                <input type="text" class="form-control" placeholder="性别" aria-describedby="basic-addon1">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">设&nbsp;&nbsp;备&nbsp;ID：</span>
                <input type="text" class="form-control" placeholder="设备ID" aria-describedby="basic-addon1">
                <span class="input-group-addon"><span class="spanRequired">*</span> <span class="spanMsg">不能为空</span></span>
            </div>
            <br>

           
            <br>

           <div class="register_footer">
               <button class="btn btn-info" >提交</button>
               <button class="btn btn-warning">取消</button>
           </div>
            </fieldset>
</div>

