@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/MyContent/images/ic_launcher.png" rel="shortcut icon" />

    <title>健康论坛</title>

    <!-- Bootstrap -->

    <link href="~/Content/themes/base/minified/bootstrap.min.css" rel="stylesheet" />
    <link href="~/MyContent/css/mycss.css" rel="stylesheet" />
    <link href="~/MyContent/css/myIndexcss.css" rel="stylesheet" />
    <link href="~/MyContent/css/base.css" rel="stylesheet" />
    <link href="~/MyContent/css/demo.css" rel="stylesheet" />
    <link href="~/MyContent/css/default.css" rel="stylesheet" />
    <link href="~/MyContent/css/Forum.css" rel="stylesheet" />



</head>
<body>
    <!--------------------------------------------------头部导航开始------------------------------------------------------------->
    @RenderPage("../Shared/Header.cshtml")
    <!--------------------------------------------------头部导航结束------------------------------------------------------------->

    <!--------------------------------------------------主体内容开始------------------------------------------------------------->
    <div class="content_header navbar">
            <fieldset class="mysearch">
                <legend><span class="glyphicon glyphicon-search" aria-hidden="true"></span> 快速搜索</legend>
                @*<div class="row">
                    <h3 style="margin:5px;"><span>【 <span class="glyphicon glyphicon-search" aria-hidden="true"></span> 快速搜索】</span></h3>
                </div>*@
                <!--快速搜索选项【开始】-->
                <div class="row" >
                    <div class="col-md-3 col-xs-12">
                        <button class="btn btn-success " id="btnSearchAll" data-loading-text="加载中..."><span class="glyphicon glyphicon-th-list"></span> 查看所有资讯</button>
                    </div>
                    <div class="col-md-9 col-xs-9">
                        <div class="row">
                            <div class="dropdown col-md-2 col-xs-9">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <span class="glyphicon glyphicon-sort-by-attributes"></span> 分类选择
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li><a href="javascript:void(0)" onclick="CateSelect(1)">营养美食</a></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(2)">塑身美体</a></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(3)">健康宝典</a></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(4)">育儿宝典</a></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(5)">娱乐杂评</a></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(6)">男人女人</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="javascript:void(0)" onclick="CateSelect(0)">取消</a></li>

                                </ul>
                                <div class="showselected" id="selectedCate"><span class="glyphicon glyphicon-ok"></span> <span class="catename"></span></div>
                            </div>
                            
                            @*<span>
                <button class="btn btn-success"><span class="glyphicon glyphicon-sort-by-attributes"></span> 按分类查找</button>
            </span>*@
                            <div class="dropdown col-md-2 col-xs-9">
                               

                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <span class="glyphicon glyphicon-time"></span> 时间选择
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(1)">最近一天</a></li>
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(2)">最近一周</a></li>
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(3)">最近一个月</a></li>
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(4)">最近一年</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(5)">更久</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="javascript:void(0);" onclick="TimeSelect(0)">取消</a></li>
                                </ul>
                                <div class="showselected" id="selectedTime"><span class="glyphicon glyphicon-ok"></span> <span class="time"></span></div>
                            </div>
                            <div class="col-md-3 col-xs-9">
                                <div class="input-group">
                                    <span style="background-color:transparent" class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-user"></span> 发表人</span>
                                    <input id="txtUName" type="text" class="form-control" placeholder="用户昵称" aria-describedby="sizing-addon1">
                                </div>
                              
                            </div>
                            <div class="col-md-2 col-xs-9">
                                <input type="hidden" id="txtCName" value="0" />
                                <input type="hidden" id="txtSTime" value="0" />
                                <button class="btn btn-info" id="btnSearchFocus"><span class="glyphicon glyphicon-zoom-in"></span> 精确查找</button>

                            </div>

                        </div>

                    </div>
                    <!--快速搜索选项【结束】-->
                </div>
            </fieldset>
    </div>
    <div class="main_content">
        <!--【头部开始】-->
        <div class="forumType_head">
            <div class="row forumType_head_group">
                <div class="col-md-4 forumType_head_item img1" onclick="JumpByForumType(1, 3, 1);">
                    @*<img src="~/MyContent/images/avtar.png" />*@
                    @*<span class="forumType_head_item_title"> 营养美食</span>*@
                    <img src="~/MyContent/images/forumType1.png" class="forumType_head_item_image" />
                </div>
                <div class="col-md-4 forumType_head_item img2" onclick="JumpByForumType(1, 20, 2);">
                    @*<img src="~/MyContent/images/avtar.png" />
                        <span class="forumType_head_item_title">塑身美体</span>*@
                    <img src="~/MyContent/images/forumType2.png" class="forumType_head_item_image" />
                </div>
                <div class="col-md-4 forumType_head_item img3" onclick="JumpByForumType(1, 20, 3);">
                    @*<img src="~/MyContent/images/avtar.png" />
                        <span class="forumType_head_item_title"> 健康宝典</span>*@
                    <img src="~/MyContent/images/forumType3.png" class="forumType_head_item_image" />
                </div>
            </div>
            <div class="row forumType_head_group">
                <div class="col-md-4 forumType_head_item img4" onclick="JumpByForumType(1, 20, 4);">
                    @*<img src="~/MyContent/images/avtar.png" />
                        <span class="forumType_head_item_title">育儿宝典</span>*@
                    <img src="~/MyContent/images/forumType4.png" class="forumType_head_item_image" />
                </div>
                <div class="col-md-4 forumType_head_item img5" onclick="JumpByForumType(1, 20, 5);">
                    @*<img src="~/MyContent/images/avtar.png" />
                        <span class="forumType_head_item_title">娱乐杂评</span>*@
                    <img src="~/MyContent/images/forumType5.png" class="forumType_head_item_image" />
                </div>
                <div class="col-md-4 forumType_head_item img6" onclick="JumpByForumType(1, 20, 6);">
                    @*<img src="~/MyContent/images/avtar.png" />
                        <span class="forumType_head_item_title">男人女人</span>*@
                    <img src="~/MyContent/images/forumType6.png" class="forumType_head_item_image" />
                </div>
            </div>
        </div>

        <!--【头部结束】-->
        <hr />

        <!--【最新和推荐内容开始】-->
        <div style="margin-left:10px;padding-left:2%; font-size:20px; display:none;" id="Forum_Refresh">

            <button onclick='Reback()' class='btn btn-info'><span class='glyphicon glyphicon-refresh'></span> 返回论坛首页</button>&nbsp;&nbsp;&nbsp;<span id="PostForum"></span>
            &nbsp;&nbsp;<span ><span class="glyphicon glyphicon-map-marker"></span> <span>当前位置：/健康论坛/</span> <span id="CurrentLocation"></span>&nbsp; </span>
        </div>
        <div class="new_recommend_content row">
            <div class="new_recommend_content_left col-md-12 col-sm-6" id="Forum_Main">
                <p style="margin:10px;font-size:20px;">【<span class="spanHot"><span class="glyphicon glyphicon-fire"></span> 热门帖子</span> 】</p>
                <ol>
                    @foreach (var forumInfo in ViewBag.ForumInfo)
                    {
                        <hr>
                        <li style="margin:10px;font-size:20px;" class="no-wrap-line" title="@forumInfo.Title"><a href="/Forum/ShowDetail?Id=@forumInfo.Id" target="_blank">@forumInfo.Title</a><span class="no-wrap-line" style="float:right"><a href="javascript:void(0)" onclick="JumpByForumTitle('@forumInfo.ForumType')">@forumInfo.ForumName</a></span></li>
                    }

                </ol>
            </div><!--【内容左边框】-->
            <!--<div class="new_recommend_content_right col-md-6 col-sm-6"></div><!--【内容右边框】-->
        </div>
        <!--【最新和推荐内容结束】-->
        <hr>
        <!--【页面主题内容结束】-->
        
    </div>
   
    <!-------------------------------------body内容结束-------------------------------------------------->
    <!-------------------------------------底部内容开始-------------------------------------------------->
   @RenderPage("../Shared/Footer.cshtml")
    <!-------------------------------------底部内容结束-------------------------------------------------->



    <script src="~/MyContent/js/jquery-1.11.2.min.js"></script>
    @*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@
    <script src="~/MyContent/js/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/MyContent/js/ForumJS.js"></script>

    <script type="text/javascript">  
        $(function () {
            $('#myModal').on('shown.bs.modal', function () {
                $('#myInput').focus();
            });
            $("ul[class$='nav']").children().eq(2).html("<a href='javascript:void(0)' >健康论坛 <span class='sr-only'>(current)</span>").addClass("active");

            $("#addLink").html("<a href='http://www.zhms.cn/'  target='_blank'>中华美食网</a> | <a href='http://bbs.051jk.com/portal.php' target='_blank'>健康安全网</a> |")
        });

        function myHelpLink() {
            $("#btnHelp").click();
        }

       

    </script>
</body>

</html>