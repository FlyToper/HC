        <script type="text/javascript">
            $(function () {

                //导航条初始化
                $("ul[class$='nav']").children().eq(5).html("<a href='javascript:void(0)' >联系我们 <span class='sr-only'>(current)</span>").addClass("active");

                $("#imgCode").click(function () {
                    var s = Math.random();
                    $(this).attr("src", "/Admin/CreateCode?type=login&s=" + s);
                });
            });

           

            function btnSubCommit() {
                var code = $("#txtCode").val();
                var comment = $("#txtComment").val();
                var contact = $("#txtContact").val();

                if (code != "") {
                    if (comment != "") {
                        if (contact != "") {
                            //show("1", "可以提交");
                            $.post("/Home/UpComment", { "code": code, "comment": comment, "contact": contact }, function (rst) {
                                if (rst == "success") {
                                    show("1", "提交成功!");
                                } else if (rst == "error1") {
                                    $("#imgCode").click();
                                    show("警告", "验证码错误！");
                                } else {
                                    show("警告", "提交出错，请重试！");
                                }
                                
                            });
                        } else {
                            show("警告", "联系方式不能为空！");
                        }
                    } else {
                        show("警告", "建议内容不能为空！");
                    }
                } else {
                    show("警告", "验证码不能为空！");
                }
            }

        </script>
