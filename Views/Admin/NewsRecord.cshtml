@{
    Layout = null;
    int k = 1;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <style type="text/css">
    </style>
    <title>管理后台</title>

    <!-- Bootstrap core CSS -->
    <link href="/MyContent/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/MyContent/css/dashboard.css" rel="stylesheet">

    <link href="/MyContent/css/admin.css" rel="stylesheet">
    <script src="/MyContent/css/ie-emulation-modes-warning.js"></script>
    <style type="text/css">
        .number {
            font-size: 60px;
        }

        .number1 {
            color: red;
        }

        .number2 {
            color: green;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                        aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="javascript:void(0);">个人健康信息管理平台</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:void(0);">@Session["AdminUser"].ToString()</a></li>
                    <li><a href="javascript:void(0);">|</a></li>
                    <li><a href="javascript:void(0);" onclick="exit()">退出</a></li>

                </ul>

            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li ><a href="/Admin">我的记事板</a></li>
                    <li><a href="/Admin/News">发布健康资讯</a></li>
                    <li class="active"><a href="avascript:void(0);">资讯纪录</a></li>
                    <li><a href="/Admin/Index/showNotice">发布公告</a></li>
                    <li><a href="/Admin/Index/showNews">发布新闻资讯</a></li>
                    <li><a href="/Admin/Index/showRecords">公告&新闻历史记录</a></li>
                </ul>

            </div>

            <!-- content 开始 -->
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h1 class="page-header">已发布资讯</h1>

                <div class="table-responsive" style="text-align: center;">
                    <table class="table table-striped">
                        <tbody>
                            <tr style="font-weight: bold; background-color: #FFFFCC;">
                                <td>#</td>
                                <td>联系方式</td>
                                <td>建议内容</td>
                                <td>提交时间</td>
                                <td>操作</td>
                            </tr>
                            <tr>
                                <td colspan="6"></td>
                            </tr>
                            @for(int i= 0; i< 10;i ++)
                            {
                                <tr>
                                    <td>k</td>
                                    <td>comment.Contact</td>
                                    <td>comment.Content</td>
                                    <td>comment.SubData</td>
                                    <td><button class="btn btn-info btn-isRead" key-id="comment.Id">已读</button></td>
                                </tr>
                                
                            }


                        </tbody>
                    </table>
                    @*<button id="btnTest">测试</button>*@



                </div>
               

                
            </div>



        </div>
    </div>

    <!-- 【模态框开始】 -->
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg"
            data-toggle="modal" data-target="#myModal" style="display: none;" id="btnShow">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="showTitle">
                        来自网页的提示
                    </h4>
                </div>
                <div class="modal-body" id="showContent">请输入正确的姓名！</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">关闭</button>

                </div>
            </div>
        </div>
    </div>
    <!-- 【模态框结束】 -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/MyContent/js/jquery-2.1.1.min.js"></script>
    <script src="/MyContent/js/bootstrap.min.js"></script>
    <script src="/MyContent/js/docs.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/MyContent/js/ie10-viewport-bug-workaround.js"></script>
    <script src="/MyContent/js/public.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".number").each(function () {
                //alert($(this).html());

                if ($(this).html() <= 10) {
                    if ($(this).html() < 0) {
                        $(this).html("0");
                    }
                    $(this).removeClass("number1");//红色
                    $(this).addClass("number2");//绿色
                } else {
                    $(this).removeClass("number2");//红色
                    $(this).addClass("number1");//绿色
                }
            });
        });

        $(".btn-isRead").click(function () {
            var element = $(this);
            var id = $(this).attr("key-id");
            $.post("/Admin/CheckCommentStatus", { "id": id }, function (rst) {
                if (rst == "success") {
                    element.parent().parent().remove();
                } else {
                    show("警告", "操作失败,请重试！");
                }
            });
        });



        $("#btnTest").click(function () {
            show("警告", "点击了");
        });
    </script>
</body>
</html>
